<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grille"
    android:id="@+id/myaccelerometerlayout">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bords"
        android:layout_gravity="center">

        <TextView

            android:id="@+id/toto"
            android:layout_width="220dp"
            android:layout_height="73dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="60dp"
            android:text="TextView"
            android:textSize="30dp" />

        <SeekBar
            android:id="@+id/Accterometer_X_axis"
            android:layout_width="136dp"
            android:layout_height="26dp"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="250dp"/>

        <SeekBar
            android:id="@+id/Accterometer_Y_axis"
            android:layout_width="136dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="250dp"
            android:layout_marginVertical="100dp"/>

        <SeekBar
            android:id="@+id/Accterometer_Z_axis"
            android:layout_width="136dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="250dp"
            android:layout_marginVertical="150dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_delete" />

        <TextView
            android:id="@+id/X_Axis"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="280dp"
            android:layout_marginVertical="30dp"
            android:text="X_Axis:" />

        <TextView
            android:id="@+id/Z_Axis"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="280dp"
            android:layout_marginVertical="130dp"
            android:text="Z_Axis:" />

        <TextView
            android:id="@+id/Y_Axis"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="280dp"
            android:layout_marginVertical="79dp"
            android:text="Y_Axis:" />

    </FrameLayout>
</FrameLayout>
